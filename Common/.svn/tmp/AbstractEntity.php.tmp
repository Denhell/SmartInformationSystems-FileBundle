<?php

namespace SmartSystems\FileBundle\Common;

use Symfony\Component\HttpFoundation\File;
use Doctrine\ORM\Mapping as ORM;

use SmartSystems\FileBundle\Entity\File as SisFile;

/**
 * Абстрактный класс для файлов.
 *
 */
abstract class AbstractEntity
{
    /**
     * Идентификатор.
     *
     * @var int
     *
     * @ORM\Id
     * @ORM\Column(type="integer", options={"unsigned"=true})
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    protected $id;

    /**
     * Дата создания.
     *
     * @var \DateTime
     *
     * @ORM\Column(name="created_at", type="datetime", nullable=false)
     */
    protected $createdAt;

    /**
     * Оригинальный файл.
     *
     * @var File\File
     */
    protected $originalFile;

    /**
     * Конструктор.
     *
     * @param File\File $originalFile Оригинальный файл
     *
     * @throws \Exception
     */
    public function __construct(File\File $originalFile = NULL)
    {
        if ($originalFile === NULL) {
            return;
        }

        if ($originalFile instanceof File\UploadedFile || $originalFile instanceof File\File) {
            $this->originalFile = $originalFile;
        } else {
            throw new \Exception('Нельзя создать файл из ' . get_class($originalFile));
        }
    }

    /**
     * Возвращает идентификатор.
     *
     * @return integer
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Устанавливает дату создания.
     *
     * @param \DateTime $createdAt Дата создания
     *
     * @return void
     */
    private function setCreatedAt($createdAt)
    {
        $this->createdAt = $createdAt;
    }

    /**
     * Возвращает дату создания.
     *
     * @return \DateTime
     */
    public function getCreatedAt()
    {
        return $this->createdAt;
    }

    /**
     * Выполняется перед сохранением в БД.
     *
     * @ORM\PrePersist
     */
    public function prePersistHandler()
    {
        $this->setCreatedAt(new \DateTime());
    }

    /**
     * Возвращает оригинальный файл.
     *
     * @return File\UploadedFile
     */
    public function getOriginalFile()
    {
        return $this->originalFile;
    }

    /**
     * Возвращет файл.
     *
     * @return SisFile
     */
    abstract public function getFile();

    /**
     * Является ли файл картинкой.
     *
     * @return bool
     */
    abstract public function isImage();
}
